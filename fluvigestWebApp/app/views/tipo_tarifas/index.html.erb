<h1>Tipos de tarifas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Tipo de Servicio</th>
      <th colspan="3"> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_tarifas.each do |tipo_tarifa| %>
      <tr>
        <td><%= tipo_tarifa.nombre %></td>
        <td><%= tipo_tarifa.descripcion %></td> <!-- Añadir helper para resumir la descripcion-->
        <td><%= tipo_tarifa.tipo_servicio %></td>
        <td><%= link_to 'Ver tarifa', tipo_tarifa %></td>
        <td><%= link_to 'Editar', edit_tipo_tarifa_path(tipo_tarifa) %></td>
        <td><%= link_to 'Eliminar', tipo_tarifa, method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar el tipo de tarifa?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo tipo tarifa', new_tipo_tarifa_path %>
<%= link_to 'Listar tarifas', controller: "tarifas" %>

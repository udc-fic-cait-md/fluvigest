<%= form_for(@barrio) do |f| %>
  <% if @barrio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@barrio.errors.count, "error") %> impiden guardar los cambios:</h2>

      <ul>
      <% @barrio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit "Aceptar" %>
  </div>
<% end %>

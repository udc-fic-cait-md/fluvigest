<h1>Listing tarifas</h1>

<table>
  <thead>
    <tr>
      <th>Ver</th>
      <th>Editar</th>
      <th>Borrar</th>
    </tr>
  </thead>

  <tbody>
    <% @tarifas.each do |tarifa| %>
      <tr>
        <td><%= tarifa.nombre %> </td>
        <td><%= tarifa.tipo %></td>
        <td><%= tarifa.precioAlquiler %> €</td>
        <td><%= tarifa.precioBasura %> € </td>
        <td><%= tarifa.engancheContador %> </td>

        <td><%= link_to 'Show', tarifa %></td>
        <td><%= link_to 'Edit', edit_tarifa_path(tarifa) %></td>
        <td><%= link_to 'Destroy', tarifa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tarifa', new_tarifa_path %>
